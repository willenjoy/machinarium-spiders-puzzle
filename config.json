{
    "canvas": {
        "size": [300, 0],
        "inverse": false,
        "mode": "row-by-row",
        "colors": {
            "use_colors": true,
            "bg_color": [156, 173, 124],
            "fg_color": [22, 22, 22]
        }
    },
    "camera": {
        "mode": "follow"
    },
    "objects": {
        "player": {
            "start_pos": [20, 40],
            "speed": 20,
            "sprite": "key"
        },
        "bullet": {
            "speed": 100,
            "sprite": "bullet",
            "size": 5
        },
        "explosion": {
            "fps": 14, 
            "sprite": "explosion",
            "mode": "stop"
        },
        "block": [
            {
                "start_pos": [120, 20],
                "sprite": "block"
            },
            {
                "start_pos": [130, 20],
                "sprite": "block"
            },
            {
                "start_pos": [125, 29],
                "sprite": "block"
            }
        ],
        "enemy": [
            {
                "start_pos": [100, 40],
                "sprite": "spider",
                "fps": 6, 
                "mode": "repeat"
            }
        ],
        "goal": {
            "start_pos": [150, 0],
            "sprite": "goal"
        }
    },
    "sounds": {
        "shoot": "assets/sounds/shoot.wav",
        "block_hit": "assets/sounds/block_hit.wav",
        "player_hit": "assets/sounds/player_hit.wav",
        "spider_hit": "assets/sounds/spider_hit.wav"
    },
    "textures": {
        "key": {
            "type": "png",
            "filename": "assets/images/key.png"
        },
        "block": {
            "type": "png",
            "filename": "assets/images/block.png"
        },
        "spider": {
            "type": "gif",
            "filename": "assets/images/spider.gif"
        },
        "explosion": {
            "type": "gif",
            "filename": "assets/images/explosion.gif"
        },
        "bullet": {
            "type": "circle",
            "size": 5
        },
        "goal": {
            "type": "rectangle",
            "width": 20,
            "height": "auto"
        }
    }
}